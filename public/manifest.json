{
  "manifest_version": 3,
  "name": "AIAssist Extension",
  "version": "0.1.0",
  "description": "Enhance your chat experience with AI-powered document integration.",
  "permissions": [
    "identity",
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://*.chatgpt.com/*",
    "https://*.openai.com/*",
    "*://*.google.com/gemini/*",
    "*://*.grok.com/*",
    "http://localhost:8000/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.chatgpt.com/*",
        "https://*.openai.com/*",
        "*://*.google.com/gemini/*",
        "*://*.grok.com/*"
      ],
      "js": ["content_script.js"],
      "css": ["content_script.css"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["index.html", "dashboard.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
